{
    "include": [
        "./src/**/*"
    ],
    "compilerOptions": {
        "target": "ESNext",
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "skipLibCheck": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "outDir": "types",
    }
}